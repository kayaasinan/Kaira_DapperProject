@model IPagedList<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}
<div class="card admin-card">

    <div class="admin-header d-flex justify-content-between align-items-center">
        <h4 class="fw-bold mb-0">Kategori Listesi</h4>
        <a href="/Admin/Category/CreateCategory/" class="btn btn-light text-dark fw-semibold">
            <i class="bi bi-plus-circle me-1"></i> Yeni Kategori
        </a>
    </div>

    <div class="admin-table">
        <div class="table-responsive">
            <table class="table table-borderless align-middle">
                <thead class="fw-semibold text-secondary">
                    <tr>
                        <th>#</th>
                        <th>Kategori</th>
                        <th class="text-center">İşlemler</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;

                        <tr class="align-middle">
                            <td><strong>@count</strong></td>

                            <td>
                                @item.Name
                            </td>
                            <td class="text-center">
                                <button type="button" onclick="confirmDelete('/Admin/Category/DeleteCategory/@item.CategoryId')" class="btn btn-danger btn-circle">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>

                            <td class="text-center">
                                <a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-primary btn-circle">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>
<div class="d-flex justify-content-center mt-4">
    @Html.PagedListPager(
    Model,
    page => Url.Action("Index", new { page }),
        new PagedListRenderOptions
        {
            UlElementClasses = new[] { "pagination" },
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" },
            DisplayLinkToFirstPage = PagedListDisplayMode.Never,
            DisplayLinkToLastPage = PagedListDisplayMode.Never
        }
        )
</div>
