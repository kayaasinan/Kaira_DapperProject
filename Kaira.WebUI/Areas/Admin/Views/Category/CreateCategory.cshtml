@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Yeni Kategori Oluştur</h5>
                </div>

                <form method="post">
                    <div class="form-group mb-3">
                        <label>Kategori Adı</label>
                        <input type="text" asp-for="Name" class="form-control" placeholder="Kategori Giriniz" />
                    </div>
                    <button class="btn btn-info">Kategori Oluştur</button>
                </form>
            </div>
        </div>
    </div>
</div>
