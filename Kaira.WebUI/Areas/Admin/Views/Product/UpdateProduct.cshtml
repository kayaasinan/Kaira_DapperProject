@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Ürün Güncelleme Sayfası</h5>
                </div>
                <form method="post">
                    <input type="hidden" asp-for="ProductId"/>
                    <div class="form-group mb-3">
                        <label>Ürün Adı</label>
                        <input type="text" asp-for="Name" class="form-control" placeholder="Ürün Adını Giriniz" required />
                    </div>
                    <div class="form-group mb-3">
                        <label>Açıklama</label>
                        <textarea asp-for="Description" class="form-control" placeholder="Ürün Açıklaması Giriniz" required></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label>Görsel Url</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Ürün Görseli Giriniz"  required/>
                    </div>
                    <div class="form-group mb-3">
                        <label>Fiyatı</label>
                        <input type="number" asp-for="Price" class="form-control" placeholder="Ürün Fiyatını Giriniz" required />
                    </div>
                    <div class="form-group mb-3">
                        <label>Kategorisi</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.categories" class="form-control" placeholder="Ürün Fiyatını Giriniz" required></select>
                    </div>
                    <button class="btn btn-info">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>




