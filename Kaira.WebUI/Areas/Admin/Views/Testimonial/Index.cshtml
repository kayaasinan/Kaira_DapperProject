
@model IEnumerable<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="card admin-card">

    <div class="admin-header d-flex justify-content-between align-items-center">
        <h4 class="fw-bold mb-0">Ürün Listesi</h4>
        <a href="/Admin/Testimonial/CreateTestimonial/" class="btn btn-light text-dark fw-semibold">
            <i class="bi bi-plus-circle me-1"></i> Yeni Koleksiyon
        </a>
    </div>

    <div class="admin-table">
        <div class="table-responsive">
            <table class="table table-borderless align-middle">
                <thead class="fw-semibold text-secondary">
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Yorum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;

                        <tr class="align-middle">
                            <td><strong>@count</strong></td>
                            <td>@item.FullName</td>
                            <td>@(item.Comment.Length > 40 ? @item.Comment.Substring(0, 40) + "..." : item.Comment) </td>
                            <td class="text-center">
                                <button type="button" onclick="confirmDelete('/Admin/Testimonial/DeleteTestimonial/@item.TestimonialId')" class="btn btn-danger btn-circle">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>

                            <td class="text-center">
                                <a href="/Admin/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-primary btn-circle">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>




