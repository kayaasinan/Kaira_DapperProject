@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Referans Güncelleme Sayfası</h5>
                </div>
                <form method="post">
                    <input type="hidden" asp-for="TestimonialId" />
                    <div class="form-group mb-3">
                        <label>Ad Soyad</label>
                        <input type="text" asp-for="FullName" class="form-control" placeholder="Referans Adını Giriniz" />
                    </div>
                    <div class="form-group mb-3">
                        <label>Yorum</label>
                        <textarea asp-for="Comment" class="form-control" placeholder="Yorum Giriniz"></textarea>
                    </div>
                    <button class="btn btn-info">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>




