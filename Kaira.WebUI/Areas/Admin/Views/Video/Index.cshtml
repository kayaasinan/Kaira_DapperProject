@model IEnumerable<ResultVideoDto>
@{
    ViewData["Title"] = "Site Galerisi";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="card admin-card">

  
    <div class="admin-header d-flex justify-content-between align-items-center">
        <h4 class="fw-bold mb-0">
            <i class="bi bi-play-btn me-2"></i> Video Galerisi
        </h4>

        <a href="/Admin/Video/CreateVideo/"
           class="btn btn-light text-dark fw-semibold">
            <i class="bi bi-plus-circle me-1"></i> Yeni Video
        </a>
    </div>

  
    <div class="p-4">

        <div class="row justify-content-center g-5">

            @foreach (var item in Model)
            {
                count++;

                <div class="col-12 col-xl-8">

                    <div class="position-relative rounded-4 overflow-hidden shadow-lg">

                        <iframe src="@item.Url"
                                style="width:100%; height:420px; border:none;"
                                allowfullscreen>
                        </iframe>

                        <div class="position-absolute bottom-0 start-0 w-100 p-3"
                             style="background: linear-gradient(to top, rgba(0,0,0,.7), rgba(0,0,0,0));">

                            <div class="d-flex justify-content-between align-items-center text-white">

                                <span class="fw-semibold">
                                   
                                </span>

                                <div class="d-flex gap-2">

                                    <a href="/Admin/Video/UpdateVideo/@item.VideoId"
                                       class="btn btn-light btn-sm fw-semibold">
                                        <i class="bi bi-pencil"></i> Düzenle
                                    </a>

                                    <button onclick="confirmDelete('/Admin/Video/DeleteVideo/@item.VideoId')"
                                            class="btn btn-danger btn-sm fw-semibold">
                                        <i class="bi bi-trash"></i> Sil
                                    </button>

                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            }

        </div>

    </div>

</div>
