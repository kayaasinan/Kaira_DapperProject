
@*
    UI Home Newsletter
*@
<section class="newsletter bg-light" style="background: url(images/pattern-bg.png) no-repeat;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 py-5 my-5">

                <div class="subscribe-header text-center pb-3">
                    <h3 class="section-title text-uppercase">
                        Yapay Zeka ile Kombin Oluşturun
                    </h3>
                </div>

                <div class="d-flex flex-wrap gap-2">
                    <input type="text" id="promptInput" class="form-control form-control-lg" placeholder="Örn: Yazlık minimal erkek kombin" />

                    <button type="button" class="btn btn-dark btn-lg text-uppercase w-100" data-bs-toggle="modal" data-bs-target="#aiModal">
                        Oluştur
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="aiModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">🤖 AI Kombin Önerisi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div id="aiResult">
                    <p class="text-muted">AI kombin hazırlanıyor...</p>
                </div>
            </div>

        </div>
    </div>
</div>

